.user_showpage_wrapper
  .page_inner
    .user_info_area
      p#notice
        = notice
      p
        strong
          | Name:
        = @user.name
      p
        strong
          | Email:
        = @user.email
      p
        strong
          | Age:
        = @user.age
      p 学習使用サイト
      - @favorite_sites.each do |s|
        <button type="button">#{s.name}</button>
      br
      p 学習中の言語
      - @favorite_languages.each do |l|
        <button type="button">#{l.name}</button>
        

    .thread_wrapper
      h1.tread_title 質問投稿掲示板
      
      -@boards.each do |board|
        =link_to board.title, board_path(board), class:"btn btn-warning tread-btns"
   
   
    .btn_wrapper
      = link_to 'Edit', edit_user_path(@user), class: "btn btn-success"
      |  
      = link_to 'Back', users_path, class: "btn btn-info"
      |  
      -if logged_in?
      = link_to 'Logout', logout_path, method: :delete, class: "btn btn-danger"